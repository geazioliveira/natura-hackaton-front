aside.main-sidebar
    // sidebar: style can be found in sidebar.less
    section.sidebar
        // Sidebar user panel
        .user-panel
            .pull-left.image
                img.img-circle(src='/img/user2-160x160.jpg', alt='User Image')
            .pull-left.info
                p Pedro
                a(href='#')
                    i.fa.fa-circle.text-success
                    |  Online
        // sidebar menu: : style can be found in sidebar.less
        ul.sidebar-menu.tree(data-widget='tree')
            li.header MENU
            li
                a(href='/')
                    i.fa.fa-dashboard
                    span Dashboard
            li
                a(href='/events')
                    i.fa.fa-users
                    span Evento
            li.treeview
                a(href='#')
                    i.fa.fa-pie-chart
                    span KPIs
                    span.pull-right-container
                        i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                    li
                        a(href='/kpi/average-time')
                            i.fa.fa-clock-o
                            span Tempo Médio
                    li
                        a(href='/kpi/quantity')
                            i.fa.fa-id-card-o
                            span Quantidade
                    li
                        a(href='/kpi/presence')
                            i.fa.fa-map-marker
                            span Prensença
                    li
                        a(href='/kpi/productivity')
                            i.fa.fa-line-chart
                            span Produtividade

